{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
  <div class="hero-slider__item">
    {% block content %}
    <div class="hero-slider__item__image" style="background-image: url('/sites/default/files/uploads/images/{{ content.field_hero_slider_image.0 }} ')"></div>
    <div class="hero-slider__item__text">
      <div class="hero-slider__item__text__small">
        {{ content.field_hero_slider_text_small.0 }}
      </div>
      <div class="hero-slider__item__text__big">
        {{ content.field_hero_slider_text_big.0 }}
      </div>
      <div class="hero-slider__item__text__details">
        {{ content.field_hero_slider_text_details.0 }}
      </div>
    </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
